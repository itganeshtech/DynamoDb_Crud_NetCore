@model ProductDIExample.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2 class="mt-4 mb-3 text-primary text-center">Product Details</h2>

<div class="card shadow-sm mx-auto" style="max-width: 400px;">
    <div class="card-body">
        <h4 class="card-title text-center mb-3">@Model.Name</h4>
        <dl class="row">
            <dt class="col-sm-4">ID</dt>
            <dd class="col-sm-8">@Model.Id</dd>

            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Price</dt>
            <dd class="col-sm-8">₹@Model.Price</dd>
        </dl>

        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-secondary me-2">Back</a>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to delete this product?');">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>
